extends layout.pug

block title
    title Registration
block script
    script
        include ../public/js/passwordCheck.js
    
block content
    h1 Hier registrieren:
    form(action="/register" method="post")
        div(class="form-group")
            label Username
            input(type="text" class="form-control" name="benutzer")
        div(class="form-group")
            label Password
            input(type="password" class="form-control" name="passwort" id ="password")
            p(id="passwordLength" class="text-danger")
            p(id="passwordDigit" class="text-danger")
        button(type="submit" class="btn btn-dark") Registrate
