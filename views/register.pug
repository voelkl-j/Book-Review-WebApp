extends layout.pug

block title
    title Registrierung
    
block content
    h1 Hier registrieren:
    form(action="/register" method="post")
        div(class="form-group")
            label Benutzername
            input(type="text" class="form-control" name="benutzer")
        div(class="form-group")
            label Passwort
            input(type="password" class="form-control" name="passwort")
        button(type="submit" class="btn btn-dark") Registrieren
